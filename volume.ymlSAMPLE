version: '3'
services:
    nginx:
        volumes:
            - /etc/letsencrypt:/etc/letsencrypt
            - /mnt/hdd/nostr/.wellknown:/usr/nostr/.wellknown
    relay:
        volumes:
            - /mnt/hdd/nostr/config.toml:/usr/src/app/config.toml
            - /mnt/hdd/nostr/data:/usr/src/app/db